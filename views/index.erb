<h2>Welcome to our PizzaShop</h2>

<div class="row">
    <% @products.each do |p|%>
        <div class="col-md-3">
            <div>
                <%= p.title %>
            </div>
            <div>
                <img src="<%= p.path_to_image  %>"/>
            </div>
            <div>
               Size: <%= p.size %> cm
            </div>
            <div>
                Price: <%= p.price %> rub
            </div>
            <div>
                <button class="btn btn-sm btn-success">Grap</button>
            </div>
        </div>
    <%end%>
</div>
<br/>
<button class="btn btn-primary" onclick="something()">Click</button>

